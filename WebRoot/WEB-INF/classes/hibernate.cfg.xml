<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
	<!-- Hibernate会自动参考本地数据库发言 -->
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="myeclipse.connection.profile">MySQL</property>
		<property name="c3p0.max_size">20</property>
		<property name="c3p0.min_size">1</property>
		<!-- 增长数 -->
		<property name="c3p0.acquire_increment">3</property>
		<!-- 指定连接数据库连接池的初始化连接数 -->
		<property name="initialPoolSize">1</property>
		<!-- 指定连接数据库连接池的连接的最大空闲时间 -->
		<property name="maxIdleTime">20</property>
		<!-- 指定显示SQL，开发阶段开启 -->
		<property name="show_sql">true</property>

		<mapping resource="com/ycx/model/Indicator.hbm.xml" />
		<mapping resource="com/ycx/model/Kind.hbm.xml" />
		<mapping resource="com/ycx/model/Warncontent.hbm.xml" />
		<mapping resource="com/ycx/model/Warnlevel.hbm.xml" />
		<mapping resource="com/ycx/model/Work.hbm.xml" />
		<mapping resource="com/ycx/model/IndiWarn.hbm.xml" />
		<mapping resource="com/ycx/model/Warnstodo.hbm.xml" />
		<mapping resource="com/ycx/model/Warntodo.hbm.xml" />
		<mapping resource="com/ycx/model/User.hbm.xml" />
		<mapping resource="com/ycx/model/Match.hbm.xml" />

	</session-factory>

</hibernate-configuration>